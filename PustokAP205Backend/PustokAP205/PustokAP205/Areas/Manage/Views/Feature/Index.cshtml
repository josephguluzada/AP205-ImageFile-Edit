@model List<Feature>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Feautures:</h1>
        <a asp-action="create" asp-controller="feature"  class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>
                <th scope="col">Icon</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Feature feature in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@feature.Id</td>
                    <td>@feature.Title</td>
                    <td>@feature.SubTitle</td>
                    <td>@feature.Icon</td>
                    <td>
                        <a asp-action="edit" asp-controller="feature" asp-route-id="@feature.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="delete" asp-controller="feature" asp-route-id="@feature.Id" class="btn btn-danger delete-btn btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>



